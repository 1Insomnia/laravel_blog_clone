{% extends 'base.html.twig' %}

{% block title %}The Laravel Blog{% endblock %}

{% block body %}
    <div class="wrapper">
        <h1 class="title">Posts</h1>
        <div class="">
            {% for post in posts %}
                <div class="post">
                    <div>
                        <h3>{{ post.title }}</h3>
                    </div>
                    <div>
                        <p> {{ post.description }}</p>
                    </div>
                    <div>
                        <p>{{ post.author }}</p>
                        <p>{{ post.publishedAt|date("M, d Y") }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
