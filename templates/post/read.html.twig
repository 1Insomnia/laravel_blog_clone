{% extends 'base.html.twig' %}

{% block title %} Blog {{ post.title }} {% endblock %}
{% block body %}
    <section id="post">
        <div class="post__title__container">
            <h1 class="post__title">{{ title }}: {{ post.title }}</h1>
        </div>
        <small>{{ post.publishedAt|date("d/m/Y") }}</small>
        <p>{{ post.body }}</p>
    </section>
{% endblock %}